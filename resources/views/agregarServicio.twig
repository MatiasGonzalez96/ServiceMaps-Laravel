{% extends 'layout.twig' %}

{% block stylesheet %}
  <link rel='stylesheet' href='css/estilosAgregarServicio.css'>
{% endblock %}

{% block javascript %}
  <script src="js/funcionesAgregarServicio.js"></script>
{% endblock %}

{% block body %}

    <!-- Creo descripcion -->
    <div id="panelDescripcion">
        <span id="textoInformacion">Ingrese los datos del servicio</span>
    </div>

    <div id="panelAgregarServicio">
        <form id="myForm">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="fname" placeholder="Servicio">
                </div>
                <div class="form-group col-md-4">
                    <label>Dirección</label>
                    <input type="text" class="form-control" name="fname" placeholder="Calle 123">
                </div>
                <div class="form-group col-md-3">
                    <label>Tipo</label>
                    <select class="form-control">
                        <option>Gomería</option>
                        <option>Estación de Servicio</option>
                        <option>Taller Mecánico</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Teléfono</label>
                    <input type="tel" class="form-control" name="fname" placeholder="(0291) 455-5555">
                </div>
                <div class="form-group col-md-6">
                    <label>Página Web</label>
                    <input type="text" class="form-control" name="fname" placeholder="www.servicio.com">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Horario</label>
                    <select class="form-control">
                        <option>De 08:00hs a 20:00hs</option>
                        <option>Abierto las 24hs</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>Imágen</label>
                    <input type="file" class="form-control-file" name="fname">
                </div>
            </div>
            <div id="panelBotonera">
                <button id="botonAgregarServicio" class="botonAgregar" type="submit" required>Agregar</button>
            </div>
        </form>
    </div>

{% endblock %}
